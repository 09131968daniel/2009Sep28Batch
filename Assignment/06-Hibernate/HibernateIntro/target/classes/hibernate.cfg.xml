<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
<!-- this is the configuration file for hibernate.-->
	
<hibernate-configuration>
	<session-factory>
		<property name ="hibernate.connection.username">jdbc_user</property>
		<property name = "hibernate.connection.password">wasspord</property>
		<property name = "hibernate.connection.url">jdbc:postgresql://mydb1.ctqn1wf3ao57.us-east-1.rds.amazonaws.com:5432/hibernate_db</property>
		<property name = "hibernate.connection.driver.class">org.postgresql.Driver</property>
		
		<property name = "hibernate.default_schema">public</property> <!--  public is default anyways so not really necessary -->
		
	<!-- additional hibernate configurations from now on.  -->
		<property name = "dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		
	<!-- if hibernate should print the sql queries to the console or log file if configured(good for dev) -->
		<property name="hibernate.connection.show_sql">true</property>
		
	<!-- this is an option for you if you want hibernate to make the printed sql pretty -->
		<property name ="hibernate.connection.format_sql">true</property>
		
	<!--  this is the connection pool size for hibernate -->
	<!-- creates a hibernate session that associates that connection with a user session -->
	<!--  this opens up a bunch of connections -->
		<property name ="hibernate.connection.pool_size">10</property>
		
	<!--  hibernate mapping to data definition language 
		create					will drop your tables upon startup and create them all again
		create-drop				will drop your tables if something goes wrong causing the program to stop. 
		update					will update the tables if some thing in the mappings changes
		none					will not affect the tables at all, no ddl. 
	-->
		<property name="hibernate.hbm2ddl.auto">create</property>
		<mapping resource="hibernate.hbm.xml"/>
	</session-factory>
</hibernate-configuration>